<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@id/cv_main">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="10dp">

        <TextView
            android:id="@id/tv_nomor"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center_vertical"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@id/tv_kota"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_toStartOf="@id/btn_cetak"
            android:textSize="18sp" />

        <TextView
            android:id="@id/tv_tgl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_below="@id/tv_nomor"
            android:gravity="center_vertical"
            android:textSize="12sp"
            android:drawableStart="@drawable/ic_date_white_24dp"
            android:drawableTint="@android:color/darker_gray"
            android:drawablePadding="4dp" />

        <TextView
            android:id="@id/tv_user"
            android:layout_width="90dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:layout_marginStart="4dp"
            android:layout_marginEnd="@dimen/activity_horizontal_margin"
            android:layout_below="@id/tv_nomor"
            android:layout_toStartOf="@id/btn_cetak"
            android:gravity="center_vertical"
            android:textSize="16sp"
            android:drawableStart="@drawable/ic_user_black_50"
            android:drawableTint="@android:color/darker_gray"
            android:drawablePadding="4dp" />

        <Button
            android:id="@id/btn_cetak"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:text="@string/open_pdf"
            android:textColor="@android:color/white"
            style="@style/button_style"/>

    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/darker_gray"/>

</androidx.cardview.widget.CardView>