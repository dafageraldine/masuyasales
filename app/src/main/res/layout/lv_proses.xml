<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/cardview"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="5dp"
    android:paddingStart="5dp"
    android:paddingEnd="5dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="30dp"
        android:padding="8dp">

        <TextView
            android:id="@id/tv_nobukti"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textColor="@android:color/black"
            android:textStyle="bold"
            android:textSize="18sp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@id/tv_nmcust"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:textColor="@android:color/black"
            android:textSize="12sp"
            app:layout_constraintTop_toBottomOf="@id/tv_nobukti"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@id/tv_ket"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="10sp"
            tools:ignore="SmallSp"
            app:layout_constraintTop_toBottomOf="@id/tv_nmcust"
            app:layout_constraintStart_toStartOf="parent"/>

        <ImageView
            android:id="@+id/img_tgl_so"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_date_white_24dp"
            app:tint="@android:color/darker_gray"
            tools:ignore="ContentDescription"
            app:layout_constraintTop_toBottomOf="@id/tv_ket"
            app:layout_constraintStart_toStartOf="parent"/>

        <TextView
            android:id="@id/tv_tgl"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="10sp"
            android:layout_marginStart="4dp"
            tools:ignore="SmallSp"
            app:layout_constraintTop_toBottomOf="@id/tv_ket"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_tgl_so"/>

        <ImageView
            android:id="@+id/img_tgl_kirim"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            app:srcCompat="@drawable/ic_date_white_24dp"
            app:tint="@android:color/darker_gray"
            tools:ignore="ContentDescription"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_ket"
            app:layout_constraintStart_toEndOf="@id/tv_tgl"/>

        <TextView
            android:id="@id/tv_tgl_kirim"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="10sp"
            android:layout_marginStart="4dp"
            tools:ignore="SmallSp"
            app:layout_constraintTop_toBottomOf="@id/tv_ket"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_tgl_kirim"/>

        <ImageView
            android:id="@+id/img_sales"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            app:srcCompat="@drawable/ic_user_black_50"
            app:tint="@android:color/darker_gray"
            android:layout_marginStart="8dp"
            app:layout_constraintTop_toBottomOf="@id/tv_ket"
            app:layout_constraintStart_toEndOf="@id/tv_tgl_kirim"/>

        <TextView
            android:id="@id/tv_nmsales"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:textSize="10sp"
            android:layout_marginStart="4dp"
            tools:ignore="SmallSp"
            app:layout_constraintTop_toBottomOf="@id/tv_ket"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toEndOf="@id/img_sales"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>