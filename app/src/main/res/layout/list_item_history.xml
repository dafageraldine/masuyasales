<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@id/line_hispenj_nofak"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/colorSecondary"
    android:padding="8dp">

    <TextView
        android:id="@id/tv_kdbrg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:textSize="14sp"
        android:textStyle="bold"
        android:textColor="@color/colorAccent"
        android:fontFamily="cursive"
        android:layout_marginBottom="4dp"
        app:layout_constraintHorizontal_weight="0.3"
        app:layout_constraintEnd_toStartOf="@id/tv_qty"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_nmbrg"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@id/tv_nmbrg"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        app:layout_constraintHorizontal_weight="0.55"
        app:layout_constraintTop_toBottomOf="@id/tv_kdbrg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_harga"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@id/tv_qty"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textColor="@android:color/black"
        android:textSize="10sp"
        android:textAlignment="textEnd"
        android:fontFamily="serif"
        android:layout_marginBottom="4dp"
        app:layout_constraintHorizontal_weight="0.15"
        app:layout_constraintStart_toEndOf="@id/tv_kdbrg"
        app:layout_constraintEnd_toStartOf="@id/tv_satuan"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_nmbrg"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@id/tv_satuan"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        android:paddingEnd="0dp"
        android:textSize="10sp"
        android:textStyle="bold"
        android:layout_marginBottom="4dp"
        app:layout_constraintHorizontal_weight="0.1"
        app:layout_constraintStart_toEndOf="@id/tv_qty"
        app:layout_constraintEnd_toStartOf="@id/tv_diskon1"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_nmbrg"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@id/tv_diskon1"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:fontFamily="serif"
        android:textAlignment="textEnd"
        android:layout_marginBottom="4dp"
        app:layout_constraintHorizontal_weight="0.15"
        app:layout_constraintStart_toEndOf="@id/tv_satuan"
        app:layout_constraintEnd_toStartOf="@id/tv_diskon2"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_harga"
        tools:ignore="SmallSp,UnusedAttribute" />

    <TextView
        android:id="@id/tv_diskon2"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:fontFamily="serif"
        android:textAlignment="textEnd"
        android:layout_marginBottom="4dp"
        app:layout_constraintHorizontal_weight="0.15"
        app:layout_constraintStart_toEndOf="@id/tv_diskon1"
        app:layout_constraintEnd_toStartOf="@id/tv_diskon3"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_harga"
        tools:ignore="SmallSp,UnusedAttribute" />

    <TextView
        android:id="@id/tv_diskon3"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:textSize="10sp"
        android:fontFamily="serif"
        android:textAlignment="textEnd"
        android:layout_marginBottom="4dp"
        app:layout_constraintHorizontal_weight="0.15"
        app:layout_constraintStart_toEndOf="@id/tv_diskon2"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_harga"
        tools:ignore="SmallSp,UnusedAttribute" />

    <TextView
        android:id="@id/tv_harga"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:paddingStart="4dp"
        android:paddingEnd="0dp"
        android:textColor="@android:color/black"
        android:textSize="14sp"
        android:textAlignment="textEnd"
        android:fontFamily="serif"
        app:layout_constraintHorizontal_weight="0.45"
        app:layout_constraintStart_toEndOf="@id/tv_nmbrg"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tv_diskon1"
        app:layout_constraintBottom_toBottomOf="parent"
        tools:ignore="SmallSp" />

</androidx.constraintlayout.widget.ConstraintLayout>