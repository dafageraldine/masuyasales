<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="8dp"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <TextView
        android:id="@id/tv_kdbrg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textColor="@android:color/black"
        android:textStyle="bold"
        android:textSize="10sp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/tv_nmbrg"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_qty"
        app:layout_constraintHorizontal_weight="0.6"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@id/tv_nmbrg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:textSize="10sp"
        android:layout_marginTop="4dp"
        app:layout_constraintTop_toBottomOf="@id/tv_kdbrg"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toStartOf="@id/tv_qty"
        app:layout_constraintHorizontal_weight="0.6"
        tools:ignore="SmallSp" />

    <TextView
        android:id="@id/tv_qty"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textSize="16sp"
        android:textAlignment="textEnd"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_kdbrg"
        app:layout_constraintEnd_toStartOf="@id/tv_satuan"
        app:layout_constraintHorizontal_weight="0.2"/>

    <TextView
        android:id="@id/tv_satuan"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:textSize="16sp"
        android:paddingStart="8dp"
        android:paddingEnd="0dp"
        android:padding="4dp"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toEndOf="@id/tv_qty"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_weight="0.2"/>

</androidx.constraintlayout.widget.ConstraintLayout>