<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingTop="5dp"
    android:paddingLeft="5dp"
    android:paddingRight="5dp">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@id/cv_main"
        card_view:cardElevation="2.5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"
                android:layout_marginBottom="10dp"
                tools:ignore="UselessParent">

                <ImageView
                    android:id="@id/img_brg"
                    android:layout_width="0dp"
                    android:layout_height="110dp"
                    android:layout_weight="0.3"
                    android:layout_marginEnd="5dp"
                    tools:ignore="ContentDescription" />

                <LinearLayout
                    android:layout_width="0dp"
                    android:layout_height="match_parent"
                    android:layout_weight="0.7"
                    android:orientation="vertical">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:id="@id/tv_kdbrg"
                            android:textStyle="bold"
                            android:gravity="center_vertical"
                            android:textSize="12sp"
                            android:textColor="@android:color/black"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:id="@id/tv_harga"
                            android:textSize="10sp"
                            android:gravity="center_vertical|end"
                            android:textColor="@android:color/holo_red_dark"
                            android:textStyle="bold"
                            tools:ignore="SmallSp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:weightSum="6">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="5"
                            android:id="@id/tv_nmbrg"
                            android:textSize="10sp"
                            android:gravity="center_vertical"
                            tools:ignore="SmallSp" />

                        <TextView
                            android:id="@id/tv_satuan"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:layout_weight="1"
                            android:textSize="10sp"
                            android:textAlignment="textEnd"
                            tools:ignore="SmallSp" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="30dp"
                        android:orientation="horizontal"
                        android:layout_marginTop="3dp">

                        <ImageView
                            android:id="@id/btn_hapus"
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="match_parent"
                            android:padding="5dp"
                            card_view:srcCompat="@drawable/ic_delete_black"
                            tools:ignore="ContentDescription" />

                        <ImageView
                            android:id="@id/btn_minus"
                            android:padding="5dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/ic_minus_black"
                            android:layout_margin="5dp"
                            android:background="@drawable/btn_min_left_corner"
                            tools:ignore="ContentDescription" />

                        <EditText
                            android:id="@id/edt_qty"
                            android:layout_width="0dp"
                            android:layout_weight="1.5"
                            android:layout_height="match_parent"
                            android:textSize="8sp"
                            android:textAlignment="center"
                            tools:ignore="Autofill,LabelFor,SmallSp,TextFields" />

                        <ImageView
                            android:id="@id/btn_plus"
                            android:padding="5dp"
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:src="@drawable/ic_add_black"
                            android:layout_margin="5dp"
                            android:background="@drawable/btn_right_corner"
                            tools:ignore="ContentDescription" />

                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_marginTop="3dp"
                        android:baselineAligned="false">

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="@string/diskon_1"
                                android:textSize="10sp"
                                android:textAlignment="center"
                                tools:ignore="NestedWeights,SmallSp" />

                            <TextView
                                android:id="@id/tv_diskon1"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_marginTop="5dp"
                                android:text="0"
                                android:textSize="10sp"
                                android:gravity="center"
                                tools:ignore="SmallSp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="@string/diskon2"
                                android:textSize="10sp"
                                android:textAlignment="center"
                                tools:ignore="NestedWeights,SmallSp" />

                            <TextView
                                android:id="@id/tv_diskon2"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:text="0"
                                android:textSize="10sp"
                                android:gravity="center"
                                tools:ignore="SmallSp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="1"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="@string/diskon_3"
                                android:textSize="10sp"
                                android:textAlignment="center"
                                tools:ignore="NestedWeights,SmallSp" />

                            <TextView
                                android:id="@id/tv_diskon3"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_marginTop="5dp"
                                android:layout_weight="1"
                                android:text="0"
                                android:textSize="10sp"
                                android:gravity="center"
                                tools:ignore="SmallSp" />

                        </LinearLayout>

                        <LinearLayout
                            android:layout_width="0dp"
                            android:layout_height="match_parent"
                            android:layout_weight="2"
                            android:orientation="vertical">

                            <TextView
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:text="@string/subtotal"
                                android:textSize="10sp"
                                android:textAlignment="textEnd"
                                android:textColor="@android:color/holo_red_dark"
                                tools:ignore="NestedWeights,SmallSp" />

                            <TextView
                                android:id="@id/tv_subtotal"
                                android:layout_width="match_parent"
                                android:layout_height="0dp"
                                android:layout_weight="1"
                                android:layout_marginTop="5dp"
                                android:text="0"
                                android:textSize="10sp"
                                android:gravity="end"
                                android:textColor="@android:color/holo_red_dark"
                                android:textStyle="bold"
                                tools:ignore="SmallSp" />

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>